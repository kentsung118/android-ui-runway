<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <com.android.ui.kent.demo.ui_response.touch_move.MyScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#6FB4DA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

        <com.android.ui.kent.demo.ui_response.touch_move.MyConstrainLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <com.android.ui.kent.demo.ui_response.touch_move.MyRecyclerView
                    android:id="@+id/my_rv_1"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

            <com.android.ui.kent.demo.ui_response.touch_move.MyRecyclerView
                    android:id="@+id/my_rv_2"
                    android:layout_width="100dp"
                    android:layout_height="800dp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintTop_toBottomOf="@id/my_rv_1"
                    app:layout_constraintStart_toStartOf="@id/my_rv_1"
                    />






        </com.android.ui.kent.demo.ui_response.touch_move.MyConstrainLayout>
    </com.android.ui.kent.demo.ui_response.touch_move.MyScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>