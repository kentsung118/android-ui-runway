<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <com.android.ui.kent.demo.ui_response.touch_move.MyScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#6FB4DA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

        <com.android.ui.kent.demo.ui_response.touch_move.MyConstrainLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <com.android.ui.kent.demo.ui_response.touch_move.MyRecyclerView
                    android:id="@+id/my_rv_1"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

            <com.android.ui.kent.demo.ui_response.touch_move.MyRecyclerView
                    android:id="@+id/my_rv_2"
                    android:layout_width="100dp"
                    android:layout_height="800dp"
                    android:layout_marginTop="50dp"
                    app:layout_constraintTop_toBottomOf="@id/my_rv_1"
                    app:layout_constraintStart_toStartOf="@id/my_rv_1"
                    />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="30dp" />


        </com.android.ui.kent.demo.ui_response.touch_move.MyConstrainLayout>
    </com.android.ui.kent.demo.ui_response.touch_move.MyScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>